            <% if (visita.length >= 5){%>
                
                <div id="checkbox-favorite"></div>
                <p>Solo se permiten 5 visitas favoritas</p>
                </div>
        <%}else{%>
            <div id="checkbox-favorite">
                <input type="checkbox" id="favorito" name="favorito"  value="favorito"  onclick="desactivar()">
                <label for="favorito"><span id="icono" class="icon icon-star-full" ></span> Favorito</label>
            </div>
        </div><%}%>

        <div class="form_group">
            <input type="date" id="date_visit" name="date_visit" required class="form_input" placeholder=" ">
