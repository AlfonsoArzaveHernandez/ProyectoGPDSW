<%- layout('layouts/plantilla.ejs')%>

<form class="form" action="/registrar_visita" method="POST">

    <div id="back-icon">
        <a href="/inicio"><img src="img/back_icon.png"></a>
    </div>
 
    
    <div class="form_container">

        <h1>Crear invitaci√≥n</h1>

   
        <div class="form_group">
            <input type="text" id="name" name="name" required class="form_input" placeholder=" ">
            <label for="name" class="form_label">Nombre: </label>
            <span class="form_line"></span>
        </div>

   <script type="text/javascript" >
      function desactivar(){
        
          if(onclick="document.getElementById('favorito').disabled = this.checked"){
              document.getElementById("date_visit").disabled=true;
          }else if(onclick="document.getElementById('favorito').disabled = !this.checked"){
            document.getElementById("date_visit").disabled=false;

          }
      }
            
    </script>
    
        

